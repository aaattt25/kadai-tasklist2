<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-xl-6 offset-xl-3">
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-4 col-sm-2 offset-md-2 col-xl-1 offset-xl-3">
      <div class="form-group">
        <%= f.select :status, {"済" => "済", "未" => "未"}, {}, {:class => "form-control"} %>
        <%=f.submit '投稿'  %>
      </div>
    </div> 
  </div>

<% end %>