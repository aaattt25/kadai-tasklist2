<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
    <%= f.label :content, 'タスク' %>
    <div class="col-md-8 col-xl-6 col-md-offset-2 col-xl-offset-3"> 
      <%= f.text_field :content, class: 'form-control' %>
    </div>
    
  </div>

  <div class="form-group row">
    <div class="col-1">
      <%= f.select :status, {"済" => "済", "未" => "未"}, {}, {:class => "form-control"} %>
    </div>
  </div> 
  
  <%=f.submit '投稿'  %>
<% end %>